{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "k8s.joshcorp.co/app": "opencode"
    },
    "name": "opencode"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app.kubernetes.io/name": "opencode"
      }
    },
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "opencode",
          "app.kubernetes.io/name": "opencode"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "OPENCODE_SERVER_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "WEBUI_PASSWORD",
                    "name": "opencode"
                  }
                }
              }
            ],
            "image": "ghcr.io/kasuboski/opencode-container:fc03fe5",
            "name": "opencode",
            "ports": [
              {
                "containerPort": 4096,
                "name": "http"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "2Gi"
              },
              "requests": {
                "cpu": "250m",
                "memory": "512Mi"
              }
            },
            "securityContext": {
              "allowPrivilegeEscalation": false,
              "capabilities": {
                "drop": [
                  "All"
                ]
              },
              "runAsNonRoot": true,
              "runAsUser": 1000,
              "seccompProfile": {
                "type": "RuntimeDefault"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/projects",
                "name": "projects",
                "subPath": "opencode-projects"
              },
              {
                "mountPath": "/home/opencode/.local",
                "name": "opencode-data"
              }
            ]
          }
        ],
        "securityContext": {
          "fsGroup": 1000
        },
        "volumes": [
          {
            "name": "projects",
            "persistentVolumeClaim": {
              "claimName": "opencode-projects"
            }
          },
          {
            "name": "opencode-data",
            "persistentVolumeClaim": {
              "claimName": "opencode-data"
            }
          }
        ]
      }
    }
  }
}
