{
  "apiVersion": "rbac.authorization.k8s.io/v1",
  "kind": "ClusterRole",
  "metadata": {
    "labels": {
      "k8s.joshcorp.co/app": "k8s-gateway"
    },
    "name": "excoredns"
  },
  "rules": [
    {
      "apiGroups": [
        ""
      ],
      "resources": [
        "services",
        "namespaces"
      ],
      "verbs": [
        "list",
        "watch"
      ]
    },
    {
      "apiGroups": [
        "extensions",
        "networking.k8s.io"
      ],
      "resources": [
        "ingresses"
      ],
      "verbs": [
        "list",
        "watch"
      ]
    },
    {
      "apiGroups": [
        "gateway.networking.k8s.io"
      ],
      "resources": [
        "*"
      ],
      "verbs": [
        "watch",
        "list"
      ]
    }
  ]
}
