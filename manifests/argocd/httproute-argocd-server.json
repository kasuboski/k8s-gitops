{
  "apiVersion": "gateway.networking.k8s.io/v1",
  "kind": "HTTPRoute",
  "metadata": {
    "labels": {
      "k8s.joshcorp.co/app": "argocd"
    },
    "name": "argocd-server",
    "namespace": "argocd"
  },
  "spec": {
    "hostnames": [
      "argocd.joshcorp.co"
    ],
    "parentRefs": [
      {
        "group": "gateway.networking.k8s.io",
        "kind": "Gateway",
        "name": "http",
        "namespace": "envoy-gateway-system"
      },
      {
        "group": "gateway.networking.k8s.io",
        "kind": "Gateway",
        "name": "cloudflare",
        "namespace": "cloudflare-gateway-system"
      }
    ],
    "rules": [
      {
        "backendRefs": [
          {
            "group": "",
            "kind": "Service",
            "name": "argocd-server",
            "port": 80,
            "weight": 1
          }
        ],
        "matches": [
          {
            "path": {
              "type": "PathPrefix",
              "value": "/"
            }
          }
        ]
      }
    ]
  }
}
