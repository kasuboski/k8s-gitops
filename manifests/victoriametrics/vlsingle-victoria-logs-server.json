{
  "apiVersion": "operator.victoriametrics.com/v1",
  "kind": "VLSingle",
  "metadata": {
    "labels": {
      "k8s.joshcorp.co/app": "victoriametrics"
    },
    "name": "victoria-logs-server",
    "namespace": "victoria-metrics"
  },
  "spec": {
    "extraArgs": {
      "storageDataPath": "/vl-data"
    },
    "resources": {
      "limits": {
        "cpu": "2",
        "memory": "4Gi"
      },
      "requests": {
        "cpu": "500m",
        "memory": "1Gi"
      }
    },
    "retentionMaxDiskSpaceUsageBytes": "50GB",
    "retentionPeriod": "15d",
    "volumeMounts": [
      {
        "mountPath": "/vl-data",
        "name": "vlstorage"
      }
    ],
    "volumes": [
      {
        "name": "vlstorage",
        "persistentVolumeClaim": {
          "claimName": "vlog-data"
        }
      }
    ]
  }
}
